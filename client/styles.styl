.chatter
    display: flex
    flex-direction: column

    .content
        padding: 20px 10px 0;

    .menu
        margin: 0 !important

    .room
        overflow:hidden
        overflow-y: auto
        margin: 0 !important
        flex:1

    .newroom-btn
        position: absolute
        bottom: 0

    .writer
        border: none
        border-top: 2px solid rgba(34, 36, 38, 0.15) !important

        textarea
            border-radius: 0 !important
            border: none

.chatter-open
    position: fixed
    transform: rotate(-90deg)
    right: -25px
    top: 10%
