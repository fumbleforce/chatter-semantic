
.chatter
    overflow-y: hidden !important

    .padded
        padding: 20px 16px 0

    .wrapper
        position: absolute
        height: 100%
        width: 100%
        top: 0
        bottom: 0
        z-index: -1

    .menu
        margin: 0 !important

    .roomList
        position: absolute
        width: 100%
        top: 40px
        bottom: 0
        overflow: hidden
        overflow-y: auto
        background-color: #FAFAFB !important
        .ui.list .content
            width: 90%
            .header, .description
                color: #60686e
                color: rgba(96,104,110,.8)
            .header .meta
                display: block
                float: right
                font-weight: 400
                font-size: 0.8em
            .description
                overflow: hidden
                text-overflow: ellipsis
                white-space: nowrap
        .ui.celled.list
            > .item:first-child, > .item:last-child
                padding-top: 10px
                padding-bottom: 10px

    .room
        position: absolute
        width: 100%
        top: 40px
        bottom: 56px
        overflow: hidden
        overflow-y: auto
        margin: 0 !important
        background-color: #FAFAFB !important

        &.ui.comments .comment
            text-align: left
            >.content
                max-width: 257px;
                padding: 5px
                background-color: #E6EEF4
                border-radius: 5px
                margin-left: 0.6em
                display: inline-block
            .avatar
                width: 2em
            &.yours
                text-align: right
                .author, .date, .content .text
                    color: white

                >.content
                    text-align: left
                    margin-right: 1em
                    margin-left: 0
                    display: inline-block
                    background-color: #2185d0
                .avatar
                    float: right

    .newroom-btn
        position: absolute
        bottom: 0

    .writer
        position: absolute
        width: 100%
        bottom: 0
        border: none
        border-top: 2px solid rgba(34, 36, 38, 0.15) !important
        textarea
            border-radius: 0 !important
            border: none

.chatter-open.ui.button
    font-size: 2.2em
    padding: 0.4em 0.5em
    opacity: 1
    position: fixed
    bottom: 3%
    right: 12px
    box-shadow: 0 6px 13px 0 rgba(0,0,0,.23)
    border-radius: 100px

    i.icon
        margin: 0
        color: #fff
